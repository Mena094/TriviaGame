@{
    ViewData["Title"] = "Inicio";
}

<div class="container mt-4">

    <h3 class="mb-4">Resumen del jugador</h3>

    <div class="row mb-4">
        <div class="col-md-4">
            <div class="alert alert-primary text-center">
                <div><strong>Puntos Totales</strong></div>
                <h4 class="mb-0">@ViewBag.Estadisticas.TotalPuntosAcumulados</h4>
            </div>
        </div>

        <div class="col-md-4">
            <div class="alert alert-success text-center">
                <div><strong>Partidas Jugadas</strong></div>
                <h4 class="mb-0">@ViewBag.Estadisticas.PartidasJugadas</h4>
            </div>
        </div>

        <div class="col-md-4">
            <div class="alert alert-warning text-center">
                <div><strong>Mejor Puntaje</strong></div>
                <h4 class="mb-0">@ViewBag.Estadisticas.MejorPuntaje</h4>
            </div>
        </div>
    </div>

    <div class="text-center">
        <a href="@Url.Action("Index", "Trivia")"
           class="btn btn-lg btn-outline-primary">
             Ver categorías de trivia
        </a>
    </div>

</div>
